page{
  background-color: #f7f7f7;
}
.p3{
  padding: 3%;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.cf:after {
  content: "";
  display: table;
  height: 0;
  clear: both;
  visibility: hidden;
}
.omit{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.head{
  height: 190rpx;
  background-color: #000;
  padding-top: 40rpx;
  box-sizing: border-box;
  margin-bottom: 25rpx;
}
.head .top image{
  width:65rpx;
  height:60rpx;
  margin-left: 40rpx;
}
.head .top text{
  font-size: 36rpx;
  color: #fff;
  margin-left: 20rpx;
}
.head  .text{
  font-size: 24rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.yuyue{
  background-color: #fff;
  margin-bottom: 25rpx;
}
.yuyue .title{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 3%;
  border-bottom: 1px solid #ddd;
  font-size: 28rpx;
}
.yuyue .list_box{
  padding: 3% 0;
}
.yuyue .list_box view{
  line-height: 200%;
  padding: 0 3%;
  color: #999;
  font-size: 26rpx;
}
.yuyue .list_box view text:first-child{
  margin-right: 20rpx;
}
.yuyue .top .img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.yuyue .top .concent{
  width: 65%;
}
.yuyue .top .concent .name{
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.yuyue .top .concent .text{
  font-size: 24rpx;
  color: #999;
  text-align: justify;
  display:-webkit-box;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
  line-height: 150%;
  margin-bottom: 30rpx;
}
.yuyue .top .concent .price .number{
  font-size: 24rpx;
  color: #999;
}
.yuyue .top .concent .price .prices{
  font-size: 32rpx;
}
.yuyue .title1{
  border-bottom: 0;
}
.zongji{
  background-color: #fff;
