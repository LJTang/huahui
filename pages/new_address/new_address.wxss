.container{
  background:#fff;
  margin: 0;
  padding: 0;
  width: 750rpx;
}
.W750{width: 750rpx;}
.W710{
  width:710rpx;
  margin:0 auto;
  font-size:32rpx;
}

.bor_T{border-top:1px solid #d9d9d9;}
.bor_B{border-bottom:1px solid #d9d9d9;}
.bor_T2{border-top:2px solid #000;}
.f30R{font-size:30rpx;}
.arrowType_View{
  width:710rpx;
  margin: 0 auto;
  height:100rpx;
  line-height:100rpx;
}
.arrowType_Title{width:210rpx;color:#000;}
.last .arrowType_Title{width:250rpx;}
.last .arrowType_Center{width:460rpx;}
.arrowType_Center{width:500rpx;}
.arrowType_Center input{
  width:500rpx;
  height:100rpx;
  line-height:100rpx;
}
.arrowType_IMG{width:100rpx;}
.arrowType_IMG image{
  width:100rpx;
  height:55rpx;
  margin-top: 22.5rpx;
}

.form-box{
  width:100%;
  background-color: #fff;
}
.row-wrap{
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  /*justify-content: space-between;*/
}
.row-wrap .label{
  width: 160rpx;
  color:#7c7c7c;
}
.row-wrap .label-right{
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
}
.row-wrap .label-right input{
  height: 100%;
  font-size:32rpx;
  padding-right: 30rpx;
}
.row-wrap .right-box{
  margin-right: 30rpx;
}
.arrow-right{
  width: 15rpx;
  height: 24rpx;
}
.addr-details{
  height: auto;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  display: flex;
}
.addr-details .label{
  margin:auto 0 auto 0;
  width: 160rpx;
  color: #7c7c7c;
}
.addr-details textarea{
  box-sizing: border-box;
  width: 480rpx;
  /*overflow: scroll;*/
}
.footer{
  width:750rpx;
  height:100rpx;
  line-height:100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background:#000;
  color:#fff;
  text-align: center;
}
.mat120R{margin-top: 120rpx;}

picker-view{
  background-color: white;
  padding: 0;
  width: 100%;
  height: 380rpx;
  bottom: 0;
  position: fixed;

}

picker-view-column view{
  vertical-align:middle;
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.animation-element-wrapper {
  display: flex;
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}
.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}
.animation-button {
  margin-top: 20rpx;
  top:20rpx;
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  align-items:center;
}

text{
  color: #999999;
  display: inline-flex;
  position: fixed;
  margin-top: 20rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 34rpx;
  font-family: Arial, Helvetica, sans-serif;
}

.left-bt{
  left: 30rpx;
}
.right-bt {
  right: 30rpx;
}

.line{
  display: block;
  position: fixed;
  height: 1rpx;
  width: 100%;
  margin-top: 89rpx;
  background-color: #eeeeee;
}