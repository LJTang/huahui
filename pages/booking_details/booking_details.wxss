.no_Order{
  width: 500rpx;
  margin:30px auto;
  height:100px;
}
.no_Order image{
  width: 300rpx;
  height:200rpx;
}
.goods_Price{
  position: absolute;
  bottom: 0;
  width:100%;
}
.goods_Price .fL{
  font-size:30rpx;
  color:#ccc;
  position: absolute;
  bottom: 0;
}

.goods_Price .fR{
  font-size:36rpx;
}
